<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kohn11014674.Views.UserDetailPage"
             Title="{Binding Title}">
    
    <StackLayout Spacing="20" Padding="15">
        <Image Source="{Binding PictureUrl}" HorizontalOptions="Center" VerticalOptions="Center"></Image>
        <Label Text="Last Name:" FontSize="Medium" />
        <Label Text="{Binding LastName}" FontSize="Small"/>
        <Label Text="First Name:" FontSize="Medium" />
        <Label Text="{Binding FirstName}" FontSize="Small"/>
        <Label Text="Date of birth:" FontSize="Medium" />
        <Label Text="{Binding DateOfBirth}" FontSize="Small"/>
        <Label Text="Phone Number:" FontSize="Medium" />
        <Label Text="{Binding PhoneNumber}" FontSize="Small"/>
    </StackLayout>
    
</ContentPage>